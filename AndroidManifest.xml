<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.placementactivityapp">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        android:usesCleartextTraffic="true">
        <activity android:name=".student.SShow_Pdf"></activity>
        <activity android:name=".tpo.AddImage" />
        <activity android:name=".tpo.AddPdf" />
        <activity android:name=".tpo.ShowPdf" />
        <activity android:name=".tpo.TShowStudent" />
        <activity android:name=".student.InterestedCompany" />
        <activity android:name=".student.SShowCompany" />
        <activity android:name=".student.SShow_Selected_Student" />
        <activity android:name=".student.SShow_Notifi" />
        <activity android:name=".student.Student_main" />
        <activity android:name=".tpo.ShowSeStudent" />
        <activity android:name=".tpo.ShowCompany" />
        <activity android:name=".tpo.AddCompany" />
        <activity android:name=".tpo.ShowNotification" />
        <activity android:name=".tpo.SaveNotification" />
        <activity
            android:name=".tpo.TpoMain"
            android:label="@string/title_activity_tpo_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".tpo.Show_Tpo" />
        <activity android:name=".student.Show_Student" />
        <activity android:name=".student.AddStudent" />
        <activity android:name=".tpo.AddTpo" />
        <activity
            android:name=".admin.AdminMain"
            android:label="@string/title_activity_admin_main" />
        <activity android:name=".admin.SignUp" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".tpo.NotificationView"
            android:label="@string/notification_activity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

    </application>

</manifest>